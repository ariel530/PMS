            $("#updadeMapCustomiztion").css("background-color", 'rgb(111, 66, 193)');
            $("#updadeMapCustomiztion").css("color", 'white');
        });
        $('#multipleColor').click(function() {
            toastr.info("This is for <span style='color: red;'><i class='fas fa-crown'> PRO</i> </span> users. Contact with admin to access it.");
            $("#singleColor").prop("checked", true);
            return;

            $("#updadeMapCustomiztion").css("background-color", 'rgb(0, 123, 255)');
            $("#updadeMapCustomiztion").css("color", 'white');
            $("#singleColorTypeCheck").hide();
            $("#multipleColorText").show();
            $("#singleColorText").hide();



        });
        $(document).ready(function() {
            var radioButtonValue = localStorage.ProjectMapSingleOrMultipleColor;
            if (radioButtonValue == 1 || radioButtonValue == undefined) {
                $("#multipleColorText").hide();
                $("#updadeMapCustomiztion").css("background-color", 'rgb(111, 66, 193)');
                $("#updadeMapCustomiztion").css("color", 'white');
            } else {
                $("#singleColorTypeCheck").hide();
                $("#multipleColorText").show();
                $("#singleColorText").hide();
                $("#multipleColor").prop("checked", true);
                $("#updadeMapCustomiztion").css("background-color", 'rgb(0, 123, 255)');
                $("#updadeMapCustomiztion").css("color", 'white');
            }
            if (radioButtonValue != undefined && localStorage.ProjectCountryMapColors) {
                console.log("Enter ro ");
                if (radioButtonValue == 1) {
                    console.log("Enter ro 4");
                    var retrievedObject = localStorage.getItem("PCML_1");
                    var obj = JSON.parse(retrievedObject);
                    $("#exampleSingleColorType1").append('<option value=' + obj + ' selected >' + obj + '</option>');
                } else {
                    var temp = Number(localStorage.ProjectCountryMapColors);
                    console.log("Enter ro ww " + temp);

                    for (var i=1; i <= temp; i++) {
                        var retrievedObject = localStorage.getItem("PCML_" + i);
                        var obj = JSON.parse(retrievedObject);
                        $("#exampleMultipleColorType1").append('<option value=' + obj + ' selected >' + obj + '</option>');

                    }
                }

            }

            //   $("#exampleSingleColorType1").append('<option value=1 selected >My option</option>');
        });
        </script>
