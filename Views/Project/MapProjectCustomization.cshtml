        <script>
        $(function() {
            $.validator.setDefaults({
                submitHandler: function() {
                    $("#myModal1").modal('show');

                    $("#SubForm").click(function() {


                        localStorage.ProjectCountryMapColors = 0;
                        var radioButtonValue = $('input[name="mapcolortype"]:checked').val();
                        console.log(radioButtonValue);

                        localStorage.ProjectMapSingleOrMultipleColor = radioButtonValue;
                        if (radioButtonValue == 2) {
                            var temp = $('#exampleMultipleColorType1').val();
                            for (var i = 0; i < temp.length; i++) {
                                localStorage.setItem("PCML_" + (i + 1), JSON.stringify(temp[i]));
                                localStorage.ProjectCountryMapColors = Number(localStorage.ProjectCountryMapColors) + 1;
                            }
                        } else {

                            var switchBoxValue = $("#exampleSingleColorCheck1").prop("checked");
                            localStorage.ProjectMapSingleColorFixedOrRange = switchBoxValue;
                            var temp = $('#exampleSingleColorType1').val();

                            localStorage.ProjectCountryMapColors = 1;
                            localStorage.setItem("PCML_1", JSON.stringify(temp[0]));

                            if (switchBoxValue == true) {
                                localStorage.ProjectCountryMapColors = 2;
                                localStorage.setItem("PCML_2", JSON.stringify(temp[0]));

                            }
                        }

                        $("#myModal2").modal('show');
                        //                        localStorage.ProjectCountryMapColors =  (temp+1);
                    });
                }
            });
            $('#quickForm').validate({
