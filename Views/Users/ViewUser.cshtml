                    <div class="card card-default">
                        <div class="card-header">
                            <h3 class="card-title">@ViewBag.Title</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <form id="quickForm" action="InsertUserInfoData" method="post" enctype="multipart/form-data">
                                <div class="card-body">

                                    <div class="row">
                                        <div class="form-group col-md-5">
                                            <label for="exampleInputAddress1">User Image</label>

                                            <input type="file" class="filepond" name="filepond" />

                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputFirstName1">First Name</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                </div>
                                                <input type="text" name="firstName" value="@Model.UserInfoData.FirstName" class="form-control" id="exampleInputFirstName1" placeholder="Enter First Name">
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label for="exampleInputLastName1">Last Name</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                </div>
                                                <input type="text" name="lastName" class="form-control" value="@Model.UserInfoData.LastName" id="exampleInputLastName1" placeholder="PassEnter Last Name">
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputPhone1">Phone: </label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fa fa-phone" aria-hidden="true"></i></span>
                                                </div>
                                                <input type="text" id="exampleInputPhone1" value="@Model.UserInfoData.PhoneNumber" name="phone" class="form-control" placeholder="Enter Phone" data-inputmask="'mask': ['999-999-9999 [x99999]', '+099 99 99 9999[9]-9999']" data-mask>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label for="exampleInputMobile1">Mobile: </label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-mobile"></i></span>
                                                </div>
                                                <input type="text" id="exampleInputMobile1" name="mobile" value="@Model.UserInfoData.MobileNumber" class="form-control" placeholder="Enter Mobile" data-inputmask="'mask': ['999-999-9999 [x99999]', '+099 99 99 9999[9]-9999']" data-mask>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputEmail1">Email: </label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                                </div>
                                                <input type="email" id="exampleInputEmail1" name="email" value="@Model.UserInfoData.Email" class="form-control" placeholder="Enter Email" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label for="exampleInputPassword1">Password: </label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                                </div>
                                                <input type="password" id="exampleInputPassword1" name="password" value="@Model.UserInfoData.Password" class="form-control" placeholder="Enter Password">
                                            </div>
                                        </div>
                                    </div>



                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputUserName1">UserName: </label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-user-secret"></i></span>
                                                </div>
                                                <input type="text" id="exampleInputUserName1" name="userName" value="@Model.UserInfoData.UserName" class="form-control" placeholder="Enter User Name" readonly>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label for="exampleInputAddress1">Address</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-home"></i></span>
                                                </div>
                                                <textarea class="form-control" id="exampleInputAddress1" rows="1" name="address" placeholder="Enter Address...">@Model.UserInfoData.Address</textarea>

                                            </div>
                                        </div>
                                    </div>






                                    <div class="row">
                                        <div class="form-group col-md-6">
                                            <label for="exampleInputUSerType1">User Type</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-users"></i></span>
                                                </div>
                                                <select class="form-control usertype" name="userType" id="exampleInputUSerType1" style="width: 80%;">

                                                    @foreach (var userType in Model.userType)
                                                    {
                                                        if (userType.Id == Model.UserInfoData.UserType)
                                                        {
                                                            <option value="@userType.Id">@userType.UserTypeName</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label for="exampleInputCountry1">Country</label>
                                            <div class="input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-globe"></i></span>
                                                </div>
                                                <select class="form-control custom-select select2bs4" name="country" id="exampleInputCountry1" style="width: 80%;">
                                                    @foreach (var country in Model.country)
                                                    {
                                                        if (country.CountryCode == Model.UserInfoData.CountryCode)
                                                        {
                                                            <option value="@country.CountryCode" selected="selected">@country.CountryName</option>
                                                        }
                                                        else
                                                        {
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>
                                    </div>






                                </div>
                                <!-- /.card-body -->
                            </form>
                 

                            <!-- /.row -->
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                           @Html.Partial("_ClientAddUpdateViewCardFooter")
                            
                        </div>
                    </div>
                    <!-- /.card -->

                </div><!-- /.container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        @Html.Partial("_AdminFooter")
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->

