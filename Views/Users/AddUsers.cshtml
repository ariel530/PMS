                    firstName: {
                        required: true,
                    },
                    filepond: {
                        required: true,
                    },
                    lastName: {
                        required: true,
                    },
                    userName: {
                        required: true,
                    },
                    referFrom: {
                        required: true,
                    },
                    email: {
                        required: true,
                        email: true,
                    },
                    password: {
                        required: true,
                        minlength: 5
