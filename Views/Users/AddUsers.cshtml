    <script>
        $('[name="userName"]').on("focusout", function () { ValidateUserNameIsUnique(); });

        $('[name="email"]').on("focusout", function () { ValidateEmailIsUnique(); });


        let userNameUniqueErrorElement = CreateErrorElement("Please Enter Reason");
        let emailUniqueErrorElement = CreateErrorElement("Please Enter Budget");
        var userNameElement = $('[name="userName"]');
        var emailElement = $('[name="email"]');




        function CreateErrorElement(text) {
            var tempElement = document.createElement("span");
            $(tempElement).addClass("invalid-feedback");
            $(tempElement).css("display", "inline");
            tempElement.innerHTML = text;
            return tempElement;
        }


        $('[name="userName"]').on('keypress', function () {
            $(userNameElement).removeClass('is-invalid');
            $(userNameUniqueErrorElement).css("display", "none");

        });

        $('[name="email"]').on('keypress', function () {
            $(emailElement).removeClass('is-invalid');
            $(emailUniqueErrorElement).css("display", "none");

        });






        var isUserNameUnique = false;
        var isEmailUnique = false;

        $("#alertresult").hide();


        function DisplayUserNameInValidMessage(userName,message) {
            userNameUniqueErrorElement.innerHTML = message + "\nSuggested UserNames:  " + userName + Math.floor((Math.random() * 10000) + 1)
                + "," + userName + Math.floor((Math.random() * 10000) + 1);
            ;
            $(userNameUniqueErrorElement).css("display", "inline");
            $(userNameElement).closest('.form-group').append(userNameUniqueErrorElement);

            $(userNameElement).addClass('is-invalid');
        }


        function DisplayEmailInValidMessage(email, message) {
            emailUniqueErrorElement.innerHTML = message;
            ;
            $(emailUniqueErrorElement).css("display", "inline");
            $(emailElement).closest('.form-group').append(emailUniqueErrorElement);

            $(emailElement).addClass('is-invalid');

        }

        function ValidateUserNameIsUnique() {
            isUserNameUnique = false;
            var userName = $('[name="userName"]').val();
            $.ajax({
                type: "POST",
                url: '@Url.Action("checkUserNameUniqueByAjax")',
                data: '{userName: ' + JSON.stringify(userName) +  '}',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (responseData) {
                    if (responseData != null && responseData.uniquenessResult != null) {
                        var resultList = JSON.parse(responseData.uniquenessResult);
                        if (resultList[1] == "fail") {
                            isUserNameUnique = true;
                            console.log("Unique UserName" );
                            return true;
                        }
                        else if (resultList[1] == "vfail")
                        {
                            isUserNameUnique = false;

                            $("#alertmessage").text("Something went wrong while during username validation");
                            $("#alertstatus").text("UserName Validation Fail !");
                            $("#alertresult").fadeIn(3000);
                            return false;
                        }
                        else {

                            isUserNameUnique = false;
                            DisplayUserNameInValidMessage(userName, resultList[0]);
                           
                            return false;

                        }


                    }
                    else {
                        isUserNameUnique = false;
                        $("#alertmessage").text("Something went wrong while during username validation");
                        $("#alertstatus").text("UserName Validation Fail !");
                        $("#alertresult").fadeIn(3000);

                        return false;
                    }
                },
                error: function (responseData) {
                    isUserNameUnique = false;
                    $("#alertmessage").text("Something went wrong while during username validation");
                    $("#alertstatus").text( "UserName Validation Fail !");
                    $("#alertresult").fadeIn(3000);
                    return false;
                }
            });

        }


        function ValidateEmailIsUnique() {
            isEmailUnique = false;
            var email = $('[name="email"]').val();
            
            $.ajax({
                type: "POST",
                url: '@Url.Action("checkEmailUniqueByAjax")',
                data: '{email: ' + JSON.stringify(email) +  '}',
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (responseData) {
                    if (responseData != null && responseData.uniquenessResult != null) {
                        var resultList = JSON.parse(responseData.uniquenessResult);
                        if (resultList[1] == "fail") {
                            isEmailUnique = true;
                            console.log("Unique Emal");

                            return true;
                        }
                        else if (resultList[1] == "vfail")
                        {
                            isEmailUnique = false;
                            $("#alertmessage").text("Something went wrong while during email validation");
                            $("#alertstatus").text("Email Validation Fail !");
                            $("#alertresult").fadeIn(3000);
                            return false;
                        }
                        else {

                            isEmailUnique = false;
                            DisplayEmailInValidMessage(email, resultList[0]);
                            return false;

                        }


                    }
                    else {
                        isEmailUnique = false;
                        $("#alertmessage").text("Something went wrong while during email validation");
                        $("#alertstatus").text("Email Validation Fail !");
                        $("#alertresult").fadeIn(3000);

                        return false;
                    }
                },
                error: function (responseData) {
                    isEmailUnique = false;
                    $("#alertmessage").text("Something went wrong while during email validation");
                    $("#alertstatus").text( "Email Validation Fail !");
                    $("#alertresult").fadeIn(3000);
                    return false;
                }
            });

        }





        function SubmitFormDataByAjax(form) {



                var fd = new FormData(form);
                // append files array into the form data
                pondFiles = pond.getFiles();
                for (var i = 0; i < pondFiles.length; i++) {
                    fd.append('file[]', pondFiles[i].file);
                }

                $.ajax({
                    url: '@Url.Action("InsetUserDataByAjax")',
                    type: 'POST',
                    data: fd,
                    dataType: 'JSON',
                    contentType: false,
                    cache: false,
                    processData: false,
                    success: function (responseData) {
                        if (responseData != null && responseData.InsertionResult != null) {
                            var resultList = JSON.parse(responseData.InsertionResult);
                            if (resultList[1] == "fail") {

                                $("#alertmessage").text(resultList[0]);
                                $("#alertstatus").text(resultList[2]);
                                $("#alertresult").fadeIn(3000);
                             }
                            else if (resultList[1] == "vfail") {
                             
                                $("#alertmessage").text(resultList[0]);
                                $("#alertstatus").text(resultList[2]);
                                $("#alertresult").fadeIn(3000);
                            }
                            else {

                                location.href = "DisplayUsers";

                            }
                        }
                        else {
                            alert("Fail");
                        }
                        //    todo the logic
                        // remove the files from filepond, etc
                    },
                    error: function (responseData) {
                        alert("Fail");
                        //    todo the logic
                    }
                });

        }


        $(function () {
            $.validator.setDefaults({
                submitHandler: function (form) {
                    var userName = $('[name="userName"]').val();
                    if (isUserNameUnique == false) {
                        DisplayUserNameInValidMessage(userName, "User with username "+ userName + " has  already taken. ");
                        return false;
                    }
                    var email = $('[name="email"]').val();
                    if (isEmailUnique == false) {
                        DisplayEmailInValidMessage(email, "User with email " + email + " has  already registered. ");
                        return false;
                    }
                    SubmitFormDataByAjax(form);
